{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}

    <div class="titles">
        <hr class="project"/>
        <div class="title_h2">
            <h2>Projet {{ project.name }}</h2>
        </div>       
    </div>

    <section class="singleProjet_content">
        <div class="singleProjet">
            <img  src="{{ vich_uploader_asset(project, 'imageFile') }}" alt="">
            <div class="singleProjet_description">
                <hr />
                <h3>Concept</h3>
                <p>{{ project.description }}</p>
            </div>
            <div class="singleProjet_details">
                <div class="singleProjet_links">
                    <span>
                        {% if project.websiteUrl == null %}
                        {% else %}
                            <ion-icon name="globe-outline"></ion-icon><a href="{{ project.websiteUrl }}">{{ project.websiteUrl }}</a>
                        {% endif %}  
                    </span>
                    <span>
                        {% if project.repoUrl == null %}
                        {% else %}
                            <ion-icon name="logo-github"></ion-icon><a href="{{ project.repoUrl }}">{{ project.repoUrl }}</a>
                        {% endif %}
                    </span>
                </div>
                <div class="singleProjet_tech">
                    <hr/>
                    <h3>Technologies</h3>
                        {% for technology in project.technology %}
                            <ul>
                                <li>{{ technology.name }}</li>
                            </ul>
                        {% endfor %} 
                </div>
            </div>
            <div class="back">
                <a href="/project"> < Retour aux projets</a>
            </div>
        </div>
    </section>

{% endblock %}
